sync on

right = 1

x = 50
y = 50

size = 100

load image "room 004.bmp", 1

do
  paste image 1,0,0

  ink rgb(0,255,0), 0
  text 0, 0, "Green text on a dark blue background"

  if x > 300 then right = 0
  if x < 50 then right = 1

  xxx = 2
  yyy = 3
  `if xxx == 2 then if yyy == 3 then text 0,50,"advance" end
  if right = 1 then x = x + 1
  if right = 0 then x = x - 1

  ink rgb(255, 255, 0), rgb(255,0,0)
  box  x, y, x+size, y+size

sync
loop

